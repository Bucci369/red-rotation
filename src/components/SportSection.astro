---
// src/components/SportSection.astro (FINALE KORREKTUR)

export interface Props {
    images: string[]; // Erwartet eine Liste von Pfaden
}
const { images } = Astro.props;
---
<section class="sport section" id="sport">
    <h2 class="section-title serif scroll-reveal">Sport & Lifestyle</h2>
    <div class="sport-grid">
        {images.map((imgPath, index) => (
            <div class={`sport-item scroll-reveal stagger-${index + 1}`}>
                <img src={imgPath} alt={`Sportbild ${index + 1}`} loading="lazy" decoding="async" />
            </div>
        ))}
    </div>
</section>