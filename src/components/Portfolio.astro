---
// Asymmetrisches Portfolio Grid mit Hover-Effekten
---

<section id="portfolio" class="py-20 lg:py-32 bg-gradient-to-b from-white to-gray-50 dark:from-gray-900 dark:to-black relative overflow-hidden">
  <!-- Background Pattern -->
  <div class="absolute inset-0 opacity-5 dark:opacity-10">
    <div class="absolute top-0 left-1/4 w-96 h-96 bg-dopamine-500 rounded-full filter blur-3xl"></div>
    <div class="absolute bottom-0 right-1/4 w-96 h-96 bg-electric-500 rounded-full filter blur-3xl"></div>
  </div>

  <div class="container mx-auto px-6 lg:px-8 relative z-10">
    <!-- Section Header -->
    <div class="text-center mb-16 section-header opacity-0 translate-y-8">
      <h2 class="text-4xl lg:text-6xl font-serif font-bold mb-6 bg-gradient-to-r from-gray-900 via-dopamine-600 to-gray-900 dark:from-white dark:via-dopamine-400 dark:to-white bg-clip-text text-transparent">
        Portfolio
      </h2>
      <p class="text-xl text-gray-600 dark:text-gray-300 max-w-3xl mx-auto leading-relaxed">
        Jedes Bild erzählt eine einzigartige Geschichte. Entdecke eine Auswahl meiner besten Arbeiten aus verschiedenen Genres.
      </p>
    </div>

    <!-- Asymmetric Grid -->
    <div class="grid grid-cols-12 gap-4 lg:gap-6 max-w-7xl mx-auto">
      <!-- Large Featured Image -->
      <div class="col-span-12 lg:col-span-8 portfolio-item" data-category="landscape">
        <div class="portfolio-card group h-96 lg:h-[500px]">
          <img 
            src="src/assets/images/image_Berge.JPG" 
            alt="Berglandschaft bei Sonnenuntergang"
            class="portfolio-image"
            loading="lazy"
          >
          <div class="portfolio-overlay">
            <div class="portfolio-content">
              <h3 class="text-2xl lg:text-3xl font-serif font-bold mb-2">Alpine Majestät</h3>
              <p class="text-gray-200 mb-4">Landschaftsfotografie</p>
              <button class="portfolio-btn">
                <span>Details ansehen</span>
                <svg class="w-5 h-5 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14"></path>
                </svg>
              </button>
            </div>
          </div>
        </div>
      </div>

      <!-- Two Stacked Images -->
      <div class="col-span-12 lg:col-span-4 space-y-4 lg:space-y-6">
        <div class="portfolio-item" data-category="portrait">
          <div class="portfolio-card group h-44 lg:h-60">
            <img 
              src="src/assets/images/image_Frau_Sonne.png" 
              alt="Portrait im Gegenlicht"
              class="portfolio-image"
              loading="lazy"
            >
            <div class="portfolio-overlay">
              <div class="portfolio-content">
                <h3 class="text-xl font-serif font-bold mb-1">Goldene Stunde</h3>
                <p class="text-gray-200 text-sm mb-3">Portraitfotografie</p>
                <button class="portfolio-btn text-sm">
                  <span>Ansehen</span>
                </button>
              </div>
            </div>
          </div>
        </div>

        <div class="portfolio-item" data-category="sport">
          <div class="portfolio-card group h-44 lg:h-60">
            <img 
              src="src/assets/images/image_frau_beim_sport_laufen.png" 
              alt="Sportfotografie - Laufen"
              class="portfolio-image"
              loading="lazy"
            >
            <div class="portfolio-overlay">
              <div class="portfolio-content">
                <h3 class="text-xl font-serif font-bold mb-1">In Bewegung</h3>
                <p class="text-gray-200 text-sm mb-3">Sportfotografie</p>
                <button class="portfolio-btn text-sm">
                  <span>Ansehen</span>
                </button>
              </div>
            </div>
          </div>
        </div>
      </div>

      <!-- Three Column Layout -->
      <div class="col-span-12 lg:col-span-4 portfolio-item" data-category="landscape">
        <div class="portfolio-card group h-64 lg:h-80">
          <img 
            src="src/assets/images/image_schnee mit baum.JPG" 
            alt="Winterlandschaft"
            class="portfolio-image"
            loading="lazy"
          >
          <div class="portfolio-overlay">
            <div class="portfolio-content">
              <h3 class="text-xl font-serif font-bold mb-1">Winterstille</h3>
              <p class="text-gray-200 text-sm mb-3">Landschaftsfotografie</p>
              <button class="portfolio-btn text-sm">
                <span>Ansehen</span>
              </button>
            </div>
          </div>
        </div>
      </div>

      <div class="col-span-12 lg:col-span-4 portfolio-item" data-category="fitness">
        <div class="portfolio-card group h-64 lg:h-80">
          <img 
            src="src/assets/images/image_foto_fitnesstudio.png" 
            alt="Fitness Studio Shooting"
            class="portfolio-image"
            loading="lazy"
          >
          <div class="portfolio-overlay">
            <div class="portfolio-content">
              <h3 class="text-xl font-serif font-bold mb-1">Studio Power</h3>
              <p class="text-gray-200 text-sm mb-3">Fitness Photography</p>
              <button class="portfolio-btn text-sm">
                <span>Ansehen</span>
              </button>
            </div>
          </div>
        </div>
      </div>

      <div class="col-span-12 lg:col-span-4 portfolio-item" data-category="portrait">
        <div class="portfolio-card group h-64 lg:h-80">
          <img 
            src="src/assets/images/image_fotoshooting.png" 
            alt="Professionelles Fotoshooting"
            class="portfolio-image"
            loading="lazy"
          >
          <div class="portfolio-overlay">
            <div class="portfolio-content">
              <h3 class="text-xl font-serif font-bold mb-1">Studio Session</h3>
              <p class="text-gray-200 text-sm mb-3">Studio Photography</p>
              <button class="portfolio-btn text-sm">
                <span>Ansehen</span>
              </button>
            </div>
          </div>
        </div>
      </div>

      <!-- Wide Image -->
      <div class="col-span-12 lg:col-span-8 portfolio-item" data-category="landscape">
        <div class="portfolio-card group h-48 lg:h-64">
          <img 
            src="src/assets/images/image_tal_mit_bergen.png" 
            alt="Weites Tal mit Bergen"
            class="portfolio-image"
            loading="lazy"
          >
          <div class="portfolio-overlay">
            <div class="portfolio-content">
              <h3 class="text-2xl font-serif font-bold mb-2">Endlose Weiten</h3>
              <p class="text-gray-200 mb-4">Panorama Fotografie</p>
              <button class="portfolio-btn">
                <span>Details ansehen</span>
                <svg class="w-5 h-5 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14"></path>
                </svg>
              </button>
            </div>
          </div>
        </div>
      </div>

      <!-- Final Portrait -->
      <div class="col-span-12 lg:col-span-4 portfolio-item" data-category="portrait">
        <div class="portfolio-card group h-48 lg:h-64">
          <img 
            src="src/assets/images/image_schnee mit person_rotejacke.png" 
            alt="Portrait im Schnee"
            class="portfolio-image"
            loading="lazy"
          >
          <div class="portfolio-overlay">
            <div class="portfolio-content">
              <h3 class="text-xl font-serif font-bold mb-1">Winterportrait</h3>
              <p class="text-gray-200 text-sm mb-3">Outdoor Portrait</p>
              <button class="portfolio-btn text-sm">
                <span>Ansehen</span>
              </button>
            </div>
          </div>
        </div>
      </div>
    </div>

    <!-- Filter Buttons -->
    <div class="text-center mt-16">
      <div class="inline-flex flex-wrap gap-3 p-2 bg-white/10 dark:bg-black/10 backdrop-blur-md rounded-full border border-white/20 dark:border-white/10">
        <button class="filter-btn active" data-filter="all">Alle</button>
        <button class="filter-btn" data-filter="landscape">Landschaft</button>
        <button class="filter-btn" data-filter="portrait">Portrait</button>
        <button class="filter-btn" data-filter="sport">Sport</button>
        <button class="filter-btn" data-filter="fitness">Fitness</button>
      </div>
    </div>

    <!-- Call to Action -->
    <div class="text-center mt-16">
      <button class="cta-portfolio group">
        <span>Vollständiges Portfolio ansehen</span>
        <svg class="w-6 h-6 ml-3 transition-transform duration-300 group-hover:translate-x-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"></path>
        </svg>
      </button>
    </div>
  </div>
</section>

<style>
  /* Portfolio Cards */
  .portfolio-card {
    @apply relative overflow-hidden rounded-2xl bg-gray-200 dark:bg-gray-800 cursor-pointer;
    box-shadow: 0 10px 30px rgba(0, 0, 0, 0.1);
    transition: all 0.4s cubic-bezier(0.25, 0.46, 0.45, 0.94);
  }

  .portfolio-card:hover {
    transform: translateY(-8px) scale(1.02);
    box-shadow: 0 25px 50px rgba(0, 0, 0, 0.2);
  }

  .portfolio-image {
    @apply w-full h-full object-cover transition-all duration-700;
  }

  .portfolio-card:hover .portfolio-image {
    transform: scale(1.1) rotate(2deg);
    filter: brightness(0.8) saturate(1.2);
  }

  /* Portfolio Overlay */
  .portfolio-overlay {
    @apply absolute inset-0 bg-gradient-to-t from-black/80 via-black/20 to-transparent opacity-0 transition-all duration-400 flex items-end p-6;
  }

  .portfolio-card:hover .portfolio-overlay {
    opacity: 1;
  }

  .portfolio-content {
    @apply transform translate-y-8 transition-transform duration-400;
  }

  .portfolio-card:hover .portfolio-content {
    transform: translateY(0);
  }

  /* Portfolio Button */
  .portfolio-btn {
    @apply px-4 py-2 bg-dopamine-500 hover:bg-dopamine-600 text-white rounded-full font-medium transition-all duration-300 flex items-center text-sm;
  }

  .portfolio-btn:hover {
    transform: translateY(-2px);
    box-shadow: 0 8px 20px rgba(243, 82, 255, 0.4);
  }

  /* Filter Buttons */
  .filter-btn {
    @apply px-6 py-2 rounded-full font-medium transition-all duration-300 text-sm;
    color: rgba(156, 163, 175, 1);
  }

  .filter-btn.active,
  .filter-btn:hover {
    @apply bg-dopamine-500 text-white;
    box-shadow: 0 4px 15px rgba(243, 82, 255, 0.3);
  }

  /* CTA Portfolio Button */
  .cta-portfolio {
    @apply px-10 py-4 bg-gradient-to-r from-dopamine-500 via-electric-500 to-dopamine-600 text-white rounded-full font-semibold text-lg transition-all duration-300 flex items-center mx-auto relative overflow-hidden;
  }

  .cta-portfolio::before {
    content: '';
    position: absolute;
    top: 0;
    left: -100%;
    width: 100%;
    height: 100%;
    background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.3), transparent);
    transition: left 0.6s;
  }

  .cta-portfolio:hover::before {
    left: 100%;
  }

  .cta-portfolio:hover {
    transform: translateY(-3px);
    box-shadow: 0 20px 40px rgba(243, 82, 255, 0.4);
  }

  /* Portfolio Item Animation */
  .portfolio-item {
    opacity: 0;
    transform: translateY(30px);
    transition: all 0.6s cubic-bezier(0.25, 0.46, 0.45, 0.94);
  }

  .portfolio-item.visible {
    opacity: 1;
    transform: translateY(0);
  }

  /* 3D Hover Effect */
  .portfolio-card {
    perspective: 1000px;
  }

  .portfolio-card:hover {
    transform: translateY(-8px) rotateX(5deg) rotateY(5deg);
  }

  /* Responsive adjustments */
  @media (max-width: 1024px) {
    .portfolio-card:hover {
      transform: translateY(-4px) scale(1.01);
    }
    
    .portfolio-card:hover .portfolio-image {
      transform: scale(1.05);
    }
  }
</style>

<script>
  document.addEventListener('DOMContentLoaded', function() {
    // Intersection Observer for Portfolio Items
    const portfolioItems = document.querySelectorAll('.portfolio-item');
    const sectionHeader = document.querySelector('.section-header');
    
    const observerOptions = {
      threshold: 0.1,
      rootMargin: '0px 0px -50px 0px'
    };
    
    const observer = new IntersectionObserver((entries) => {
      entries.forEach((entry, index) => {
        if (entry.isIntersecting) {
          setTimeout(() => {
            entry.target.classList.add('visible');
          }, index * 100);
        }
      });
    }, observerOptions);
    
    // Observe section header
    if (sectionHeader) {
      const headerObserver = new IntersectionObserver((entries) => {
        entries.forEach(entry => {
          if (entry.isIntersecting) {
            entry.target.style.opacity = '1';
            entry.target.style.transform = 'translateY(0)';
            entry.target.style.transition = 'all 1s cubic-bezier(0.25, 0.46, 0.45, 0.94)';
          }
        });
      }, observerOptions);
      
      headerObserver.observe(sectionHeader);
    }
    
    // Observe portfolio items
    portfolioItems.forEach(item => {
      observer.observe(item);
    });
    
    // Filter Functionality
    const filterBtns = document.querySelectorAll('.filter-btn');
    const portfolioCards = document.querySelectorAll('.portfolio-item');
    
    filterBtns.forEach(btn => {
      btn.addEventListener('click', () => {
        // Remove active class from all buttons
        filterBtns.forEach(b => b.classList.remove('active'));
        // Add active class to clicked button
        btn.classList.add('active');
        
        const filterValue = btn.dataset.filter;
        
        portfolioCards.forEach(card => {
          const cardCategory = card.dataset.category;
          
          if (filterValue === 'all' || cardCategory === filterValue) {
            card.style.display = 'block';
            setTimeout(() => {
              card.style.opacity = '1';
              card.style.transform = 'translateY(0) scale(1)';
            }, 100);
          } else {
            card.style.opacity = '0';
            card.style.transform = 'translateY(20px) scale(0.9)';
            setTimeout(() => {
              card.style.display = 'none';
            }, 300);
          }
        });
      });
    });
    
    // Enhanced hover effects with mouse tracking
    portfolioCards.forEach(card => {
      const cardElement = card.querySelector('.portfolio-card');
      
      cardElement.addEventListener('mousemove', (e) => {
        const rect = cardElement.getBoundingClientRect();
        const x = e.clientX - rect.left;
        const y = e.clientY - rect.top;
        const centerX = rect.width / 2;
        const centerY = rect.height / 2;
        
        const rotateX = (y - centerY) / 10;
        const rotateY = (centerX - x) / 10;
        
        cardElement.style.transform = `translateY(-8px) rotateX(${rotateX}deg) rotateY(${rotateY}deg)`;
      });
      
      cardElement.addEventListener('mouseleave', () => {
        cardElement.style.transform = 'translateY(0) rotateX(0) rotateY(0)';
      });
    });
    
    // Lazy loading enhancement
    const images = document.querySelectorAll('.portfolio-image');
    const imageObserver = new IntersectionObserver((entries) => {
      entries.forEach(entry => {
        if (entry.isIntersecting) {
          const img = entry.target;
          img.style.filter = 'blur(0px)';
          img.style.opacity = '1';
          imageObserver.unobserve(img);
        }
      });
    });
    
    images.forEach(img => {
      img.style.filter = 'blur(5px)';
      img.style.opacity = '0.5';
      img.style.transition = 'all 0.6s ease';
      imageObserver.observe(img);
    });
  });
</script>