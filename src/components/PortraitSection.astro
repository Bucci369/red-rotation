---
// src/components/PortraitSection.astro
import type { ImageMetadata } from 'astro';

interface PortraitItem {
    type: 'image';
    src: string | ImageMetadata;
    alt: string;
}

interface Props {
    items: readonly PortraitItem[];
}

const { items } = Astro.props;
---

<section id="portrait" class="section">
    <h2 class="section-title serif scroll-reveal">Portrait-Fotografie</h2>
    <div class="portrait-masonry">
        {items.map((item, index) => (
            <div class={`portrait-item scroll-reveal stagger-${(index % 6) + 1}`}>
                {item.type === 'image' && (
                    <img src={item.src} alt={item.alt} loading="lazy" />
                )}
                </div>
        ))}
    </div>
</section>