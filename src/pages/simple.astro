<!DOCTYPE html>
<html lang="de">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Red Rotation Photography</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&family=Playfair+Display:wght@400;500;600;700&display=swap" rel="stylesheet">
    <style>
        body { font-family: 'Inter', sans-serif; }
        .font-serif { font-family: 'Playfair Display', serif; }
        
        /* Custom colors */
        .text-primary { color: #f352ff; }
        .bg-primary { background-color: #f352ff; }
        .text-secondary { color: #00d9ff; }
        .bg-secondary { background-color: #00d9ff; }
        .bg-gradient-primary { 
            background: linear-gradient(90deg, #f352ff, #00d9ff); 
        }
        
        /* Glass effect */
        .glass {
            background: rgba(255, 255, 255, 0.1);
            backdrop-filter: blur(10px);
            border: 1px solid rgba(255, 255, 255, 0.2);
        }
        
        /* Dark mode */
        .dark .glass {
            background: rgba(0, 0, 0, 0.3);
            border: 1px solid rgba(255, 255, 255, 0.1);
        }
        
        /* Smooth transitions */
        * { transition: all 0.3s ease; }
        
        /* Hide scrollbar */
        body::-webkit-scrollbar { display: none; }
        body { -ms-overflow-style: none; scrollbar-width: none; }
    </style>
</head>
<body class="bg-white dark:bg-gray-900 text-gray-900 dark:text-white">
    
    <!-- Dark Mode Toggle -->
    <button id="theme-toggle" class="fixed top-6 right-6 z-50 p-3 rounded-full glass hover:scale-110">
        <svg class="w-5 h-5" viewBox="0 0 24 24" fill="currentColor">
            <path class="sun" d="M12 17.5a5.5 5.5 0 1 0 0-11 5.5 5.5 0 0 0 0 11zm0 1.5a7 7 0 1 1 0-14 7 7 0 0 1 0 14z"/>
            <path class="moon hidden" d="M16.5 6A10.5 10.5 0 0 1 4.7 16.4 8.5 8.5 0 1 0 16.4 4.7l.1 1.3z"/>
        </svg>
    </button>

    <!-- Navigation -->
    <nav class="fixed top-0 left-0 right-0 z-40 glass">
        <div class="max-w-7xl mx-auto px-6">
            <div class="flex items-center justify-between h-20">
                <div class="text-2xl font-serif font-bold text-primary">
                    Red Rotation
                </div>
                <div class="hidden md:flex space-x-8">
                    <a href="#home" class="hover:text-primary">Home</a>
                    <a href="#portfolio" class="hover:text-primary">Portfolio</a>
                    <a href="#about" class="hover:text-primary">About</a>
                    <a href="#contact" class="hover:text-primary">Kontakt</a>
                </div>
                <button class="px-6 py-2 border-2 border-primary text-primary hover:bg-primary hover:text-white rounded-full">
                    Buchen
                </button>
            </div>
        </div>
    </nav>

    <!-- Hero Section -->
    <section id="home" class="min-h-screen flex items-center justify-center bg-gradient-to-br from-purple-900 via-blue-900 to-indigo-900 relative overflow-hidden">
        <!-- Background -->
        <div class="absolute inset-0 bg-black/40"></div>
        
        <!-- Content -->
        <div class="relative z-10 text-center text-white max-w-4xl mx-auto px-6">
            <div class="glass p-8 md:p-12 rounded-3xl">
                <h1 class="text-5xl md:text-7xl font-serif font-bold mb-6">
                    <span class="block">Capturing</span>
                    <span class="block bg-gradient-primary bg-clip-text text-transparent">Moments</span>
                    <span class="block">in Time</span>
                </h1>
                
                <p class="text-xl md:text-2xl mb-8 opacity-90">
                    Professionelle Fotografie mit künstlerischem Anspruch.
                    <span class="text-primary font-medium">Jeder Moment erzählt eine Geschichte.</span>
                </p>
                
                <div class="flex flex-col sm:flex-row gap-4 justify-center">
                    <button class="px-8 py-4 bg-gradient-primary text-white rounded-full font-semibold hover:scale-105">
                        Portfolio entdecken
                    </button>
                    <button class="px-8 py-4 border-2 border-white/30 text-white hover:bg-white/10 rounded-full font-semibold">
                        Kontakt aufnehmen
                    </button>
                </div>
            </div>
        </div>
    </section>

    <!-- Portfolio Section -->
    <section id="portfolio" class="py-20 bg-gray-50 dark:bg-gray-800">
        <div class="max-w-7xl mx-auto px-6">
            <div class="text-center mb-16">
                <h2 class="text-4xl md:text-6xl font-serif font-bold mb-6">
                    Portfolio
                </h2>
                <p class="text-xl text-gray-600 dark:text-gray-300 max-w-3xl mx-auto">
                    Jedes Bild erzählt eine einzigartige Geschichte.
                </p>
            </div>

            <!-- Portfolio Grid -->
            <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
                <div class="portfolio-item group cursor-pointer">
                    <div class="relative overflow-hidden rounded-2xl bg-gray-200 dark:bg-gray-700 h-80">
                        <div class="absolute inset-0 bg-gradient-to-t from-black/60 to-transparent opacity-0 group-hover:opacity-100 transition-opacity duration-300 flex items-end p-6">
                            <div class="text-white">
                                <h3 class="text-xl font-bold mb-2">Landschaftsfotografie</h3>
                                <p class="text-gray-200">Atemberaubende Naturaufnahmen</p>
                            </div>
                        </div>
                    </div>
                </div>
                
                <div class="portfolio-item group cursor-pointer">
                    <div class="relative overflow-hidden rounded-2xl bg-gray-200 dark:bg-gray-700 h-80">
                        <div class="absolute inset-0 bg-gradient-to-t from-black/60 to-transparent opacity-0 group-hover:opacity-100 transition-opacity duration-300 flex items-end p-6">
                            <div class="text-white">
                                <h3 class="text-xl font-bold mb-2">Portraitfotografie</h3>
                                <p class="text-gray-200">Emotionale Porträts</p>
                            </div>
                        </div>
                    </div>
                </div>
                
                <div class="portfolio-item group cursor-pointer">
                    <div class="relative overflow-hidden rounded-2xl bg-gray-200 dark:bg-gray-700 h-80">
                        <div class="absolute inset-0 bg-gradient-to-t from-black/60 to-transparent opacity-0 group-hover:opacity-100 transition-opacity duration-300 flex items-end p-6">
                            <div class="text-white">
                                <h3 class="text-xl font-bold mb-2">Eventfotografie</h3>
                                <p class="text-gray-200">Unvergessliche Momente</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- About Section -->
    <section id="about" class="py-20 bg-white dark:bg-gray-900">
        <div class="max-w-7xl mx-auto px-6">
            <div class="grid lg:grid-cols-2 gap-16 items-center">
                <div>
                    <div class="w-full h-96 bg-gray-200 dark:bg-gray-700 rounded-2xl flex items-center justify-center">
                        <span class="text-gray-500">Photographer Portrait</span>
                    </div>
                </div>
                
                <div>
                    <h2 class="text-5xl lg:text-6xl font-serif font-bold mb-6">
                        <span class="block">Über</span>
                        <span class="block text-primary">mich</span>
                    </h2>
                    
                    <p class="text-lg text-gray-600 dark:text-gray-300 mb-6">
                        Hallo! Ich bin ein leidenschaftlicher Fotograf mit über 5 Jahren Erfahrung. 
                        Meine Mission ist es, einzigartige Momente festzuhalten und unvergessliche Erinnerungen zu schaffen.
                    </p>
                    
                    <div class="space-y-4 mb-8">
                        <div>
                            <div class="flex justify-between mb-2">
                                <span>Landschaftsfotografie</span>
                                <span class="text-primary">95%</span>
                            </div>
                            <div class="w-full bg-gray-200 dark:bg-gray-700 rounded-full h-2">
                                <div class="bg-gradient-primary h-2 rounded-full" style="width: 95%"></div>
                            </div>
                        </div>
                        
                        <div>
                            <div class="flex justify-between mb-2">
                                <span>Portraitfotografie</span>
                                <span class="text-secondary">90%</span>
                            </div>
                            <div class="w-full bg-gray-200 dark:bg-gray-700 rounded-full h-2">
                                <div class="bg-secondary h-2 rounded-full" style="width: 90%"></div>
                            </div>
                        </div>
                    </div>
                    
                    <button class="px-8 py-4 bg-gradient-primary text-white rounded-full font-semibold hover:scale-105">
                        Mehr erfahren
                    </button>
                </div>
            </div>
        </div>
    </section>

    <!-- Contact Section -->
    <section id="contact" class="py-20 bg-gray-900 text-white">
        <div class="max-w-7xl mx-auto px-6">
            <div class="text-center mb-16">
                <h2 class="text-5xl lg:text-6xl font-serif font-bold mb-6">
                    <span class="block">Lass uns</span>
                    <span class="block text-primary">zusammenarbeiten</span>
                </h2>
                
                <p class="text-xl text-gray-300 max-w-3xl mx-auto">
                    Bereit für dein nächstes Projekt? Kontaktiere mich für ein unverbindliches Gespräch.
                </p>
            </div>

            <div class="grid lg:grid-cols-2 gap-16">
                <!-- Contact Form -->
                <div class="glass p-8 rounded-3xl">
                    <h3 class="text-2xl font-bold mb-6">Projekt anfragen</h3>
                    
                    <form class="space-y-6">
                        <div>
                            <input type="text" placeholder="Dein Name" class="w-full p-4 bg-white/10 border border-white/20 rounded-lg focus:border-primary outline-none">
                        </div>
                        
                        <div>
                            <input type="email" placeholder="E-Mail Adresse" class="w-full p-4 bg-white/10 border border-white/20 rounded-lg focus:border-primary outline-none">
                        </div>
                        
                        <div>
                            <select class="w-full p-4 bg-white/10 border border-white/20 rounded-lg focus:border-primary outline-none">
                                <option value="">Projekt Art wählen</option>
                                <option value="portrait">Portraitfotografie</option>
                                <option value="wedding">Hochzeitsfotografie</option>
                                <option value="landscape">Landschaftsfotografie</option>
                                <option value="event">Event-Fotografie</option>
                            </select>
                        </div>
                        
                        <div>
                            <textarea rows="5" placeholder="Deine Nachricht" class="w-full p-4 bg-white/10 border border-white/20 rounded-lg focus:border-primary outline-none resize-none"></textarea>
                        </div>
                        
                        <button type="submit" class="w-full py-4 bg-gradient-primary text-white rounded-lg font-semibold hover:scale-105">
                            Nachricht senden
                        </button>
                    </form>
                </div>

                <!-- Contact Info -->
                <div class="space-y-8">
                    <div class="glass p-6 rounded-2xl">
                        <h4 class="text-lg font-semibold mb-2">E-Mail</h4>
                        <p class="text-gray-300">hello@redrotation.photo</p>
                    </div>
                    
                    <div class="glass p-6 rounded-2xl">
                        <h4 class="text-lg font-semibold mb-2">Telefon</h4>
                        <p class="text-gray-300">+49 123 456 7890</p>
                    </div>
                    
                    <div class="glass p-6 rounded-2xl">
                        <h4 class="text-lg font-semibold mb-2">Studio</h4>
                        <p class="text-gray-300">München, Bayern</p>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <script>
        // Dark Mode Toggle
        const themeToggle = document.getElementById('theme-toggle');
        const html = document.documentElement;
        const sunIcon = themeToggle.querySelector('.sun');
        const moonIcon = themeToggle.querySelector('.moon');
        
        // Check saved theme
        const currentTheme = localStorage.getItem('theme') || 'light';
        if (currentTheme === 'dark') {
            html.classList.add('dark');
            sunIcon.classList.add('hidden');
            moonIcon.classList.remove('hidden');
        }
        
        themeToggle.addEventListener('click', () => {
            if (html.classList.contains('dark')) {
                html.classList.remove('dark');
                localStorage.setItem('theme', 'light');
                sunIcon.classList.remove('hidden');
                moonIcon.classList.add('hidden');
            } else {
                html.classList.add('dark');
                localStorage.setItem('theme', 'dark');
                sunIcon.classList.add('hidden');
                moonIcon.classList.remove('hidden');
            }
        });

        // Smooth scrolling
        document.querySelectorAll('a[href^="#"]').forEach(anchor => {
            anchor.addEventListener('click', function (e) {
                e.preventDefault();
                const target = document.querySelector(this.getAttribute('href'));
                if (target) {
                    target.scrollIntoView({ behavior: 'smooth' });
                }
            });
        });

        // Portfolio hover effects
        document.querySelectorAll('.portfolio-item').forEach(item => {
            item.addEventListener('mouseenter', function() {
                this.style.transform = 'translateY(-8px) scale(1.02)';
            });
            
            item.addEventListener('mouseleave', function() {
                this.style.transform = 'translateY(0) scale(1)';
            });
        });
    </script>
</body>
</html>