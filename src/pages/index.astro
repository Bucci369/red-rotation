---
// src/pages/index.astro (FINALE KORREKTUR)

// Layout & Komponenten importieren (Das bleibt gleich)
import Layout from '../layouts/Layout.astro';
import Navbar from '../components/Navbar.astro';
import Hero from '../components/Hero.astro';
import LandscapeSection from '../components/LandscapeSection.astro';
import PortraitSection from '../components/PortraitSection.astro';
import SportSection from '../components/SportSection.astro';
import VideoBuffer from '../components/VideoBuffer.astro';
import ContactSection from '../components/ContactSection.astro';
import Footer from '../components/Footer.astro';

// KEINE BILD-IMPORTS MEHR!
// Wir definieren die Pfade als einfachen Text.
// Der Pfad beginnt mit "/", was auf den "public" Ordner verweist.

const landscapeImages = [
    { src: "/images/image_Berge.JPG", alt: "Berglandschaft", title: "Alpine Majestät", desc: "Dramatische Berglandschaften" },
    { src: "/images/image_Bergemitstraße.JPG", alt: "Bergstraße", title: "Serpentinen", desc: "Winding roads through majestic peaks" },
    { src: "/images/image_schnee mit baum.JPG", alt: "Winterlandschaft", title: "Winterstille", desc: "Peaceful winter morning" },
    { src: "/images/image_tal_mit_bergen.png", alt: "Tal mit Bergen", title: "Weite Täler", desc: "Endless valley panoramas" },
    { src: "/images/image_landscape.PNG", alt: "Landschaftspanorama", title: "Horizonte", desc: "Where earth meets sky" },
    { src: "/images/image_schnee mit baum und person.png", alt: "Schnee mit Person", title: "Einsamkeit", desc: "Solitude in the snow" },
];

const portraitImagePaths = [
    "/images/image_Frau_Felder.JPG",
    "/images/image_Frau_Sonne.png",
    "/images/image_frau.PNG",
    "/images/image_frau2.PNG",
    "/images/image_mann.PNG",
    "/images/image_schnee mit person_rotejacke.png"
];

const sportImagePaths = [
    "/images/image_frau_beim_sport_laufen.png",
    "/images/image_foto_fitnesstudio.png",
    "/images/image_fotoshooting.png"
];
---

<Layout>
    <Navbar />
    <main>
        <Hero />
        <LandscapeSection images={landscapeImages} />
        <VideoBuffer videoSrc="/videos/video_von_bergen.mp4" quote="Jeder Moment ist einzigartig – ich halte ihn für die Ewigkeit fest." author="Red Rotation" />
        <PortraitSection images={portraitImagePaths} />
        <VideoBuffer videoSrc="/videos/video_von_bergen und wald.mp4" quote="In der Stille der Natur finden wir die lautesten Geschichten." author="Philosophie der Fotografie" />
        <SportSection images={sportImagePaths} />
        <ContactSection />
    </main>
    <Footer />
</Layout>